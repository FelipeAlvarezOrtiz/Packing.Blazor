<MudPaper Class="row" Elevation="3">
    <br />
    @if (Cargando)
    {
        <div class="col-12 text-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">...</span>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-12 col-lg-12 col-xl-2">
            <img class="card-img-top text-center p-1" src="/images/grupos/BROCOLI.png" alt="@Grupo.NombreGrupo" style="height: 18rem;">
        </div>
        <div class="col-md-12 col-lg-12 col-xl-10">
            <div class="row">
                <div class="col-md-12 col-lg-12 col-xl-6 mt-3">
                    <MudTextField id="nuevoNombreGrupo" Variant="Variant.Outlined" @bind-Value="Grupo.NombreGrupo" />
                </div>
                <div class="col-md-12 col-lg-12 col-xl-6 mt-3">
                    <div class="row">
                        <div class="col-6 text-center">
                            <MudFab Color="Color.Info" Icon="@Icons.Material.Filled.Refresh" OnClick="EditarGrupo" Label="Editar"></MudFab>
                        </div>
                        <div class="col-6 text-center">
                            <MudFab Color="Color.Error" Icon="@Icons.Material.Filled.Delete" OnClick="@(() => EliminarGrupo.InvokeAsync(Grupo))" Label="Borrar"></MudFab>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-md-12 col-lg-12 col-xl-6"></div>
                <div class="col-md-12 col-lg-12 col-xl-6"></div>
            </div>
            <div class="row mb-1">
                <div class="col-md-12 col-lg-12 col-xl-6"></div>
                <div class="col-md-12 col-lg-12 col-xl-6"></div>
            </div>
        </div>
    }
</MudPaper>
<br />
@code {
    protected bool Cargando = false;

    [Parameter] public GrupoProducto Grupo { get; set; }
    [Parameter] public EventCallback<int> NotificacionExitosa { get; set; }
    [Parameter] public EventCallback<GrupoProducto> EliminarGrupo { get; set; }

    public void EditarGrupo()
    {

    }

}